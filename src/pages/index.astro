---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cole Sevier">
  <section class="hero">
    <div class="left">
      <h1>Cole Sevier</h1>
      <p class="subtitle">A little about me.</p>

      <div class="grid-buttons">
        <a href="/about" class="grid-btn">About Me</a>
        <a href="/projects" class="grid-btn">Projects</a>
        <a href="/principles" class="grid-btn">Principles</a>
        <a href="/personal" class="grid-btn">Personal</a>
      </div>


      <div class="social">
        <a href="https://github.com/colesevier" target="_blank">GitHub</a>
        <a href="https://linkedin.com/in/cole-sevier" target="_blank">LinkedIn</a>
        <a href="/resume.pdf" target="_blank">Resume</a>
      </div>
    </div>

    <div class="right">
        <img src="/profile.jpeg" alt="Cole Sevier" class="profile-image" />
    </div>
  </section>
</Layout>

<style>
.hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 4rem;
  min-height: 80vh;
}

.left {
  flex: 1;
}

.right {
  flex: 1.3;
  display: flex;
  justify-content: center;
}


h1 {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: 1.4rem;
  color: #555;
  margin-bottom: 2rem;
}

.grid-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  margin-top: 3rem;
  max-width: 700px;
}

.grid-btn {
  background: #e6e4df; /* light grey */
  padding: 1.6rem 2rem;
  text-align: center;
  text-decoration: none;
  color: #2b2118;
  font-weight: 500;
  border-radius: 4px;
  transition: all 0.2s ease;
  font-size: 0.95rem;
}

.grid-btn:hover {
  background: #d1cec8; /* darker grey */
}


.social {
  display: flex;
  gap: 1.5rem;
  font-size: 0.95rem;
}

.social a {
  color: #666;
  text-decoration: none;
}

.social a:hover {
  color: #111;
}

.right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-image {
  width: 560px;
  max-width: 100%;
  border-radius: 2px;
  object-fit: cover;
}

</style>
