---
const name = "Cole Sevier";
const tagline = "Builder. Engineer. Systems thinker.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name}</title>
  </head>
  <body class="bg-black text-white font-sans">
    <main class="min-h-screen flex items-center justify-center px-6">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold tracking-tight">
          {name}
        </h1>
        <p class="mt-4 text-xl text-neutral-400">
          {tagline}
        </p>

        <div class="mt-8 flex gap-6">
          <a href="/projects" class="text-white underline underline-offset-4">
            Projects
          </a>
          <a href="/about" class="text-white underline underline-offset-4">
            About
          </a>
          <a href="mailto:youremail@domain.com" class="text-white underline underline-offset-4">
            Contact
          </a>
        </div>
      </div>
    </main>
  </body>
</html>
