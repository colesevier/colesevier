---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cole Sevier">
  <section class="hero">
    <div class="left">
      <h1>Cole Sevier</h1>
      <p class="subtitle">A little about me.</p>

      <div class="buttons">
        <a href="/projects" class="btn">Projects</a>
        <a href="/about" class="btn">About</a>
        <a href="/contact" class="btn">Contact</a>
      </div>

      <div class="social">
        <a href="https://github.com/colesevier" target="_blank">GitHub</a>
        <a href="https://linkedin.com/in/cole-sevier" target="_blank">LinkedIn</a>
        <a href="/resume.pdf" target="_blank">Resume</a>
      </div>
    </div>

    <div class="right">
        <img src="/profile.jpeg" alt="Cole Sevier" class="profile-image" />
    </div>
  </section>
</Layout>

<style>
.hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 4rem;
  min-height: 80vh;
}

.left {
  flex: 1;
}

.right {
  flex: 1.2;
  display: flex;
  justify-content: center;
}

.right img {
  max-width: 420px;
  width: 100%;
  border-radius: 8px;
}

h1 {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: 1.4rem;
  color: #555;
  margin-bottom: 2rem;
}

.buttons {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.btn {
  border: 1px solid #ddd;
  padding: 0.7rem 1.4rem;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn:hover {
  background: #111;
  color: white;
}

.social {
  display: flex;
  gap: 1.5rem;
  font-size: 0.95rem;
}

.social a {
  color: #666;
  text-decoration: none;
}

.social a:hover {
  color: #111;
}

.right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-image {
  width: 520px;
  max-width: 100%;
  border-radius: 2px;
  object-fit: cover;
}

</style>
