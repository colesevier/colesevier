---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cole Sevier">
  <section class="hero">
    <div class="left">
      <h1>Cole Sevier</h1>
      <p class="subtitle">A little about me.</p>

      <div class="grid-buttons">
        <a href="/about" class="grid-btn">About Me</a>
        <a href="/projects" class="grid-btn">Projects</a>
        <a href="/principles" class="grid-btn">Principles</a>
        <a href="/gallery" class="grid-btn">Personal</a>
      </div>


      <div class="social">
        <a href="https://github.com/colesevier" target="_blank">GitHub</a>
        <a href="https://linkedin.com/in/cole-sevier" target="_blank">LinkedIn</a>
        <a href="/resume.pdf" target="_blank">Resume</a>
      </div>
    </div>

    <div class="right">
        <img src="/profile.jpeg" alt="Cole Sevier" class="profile-image" />
    </div>
  </section>
</Layout>

<style>
.hero {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rem;
  padding: 0 8%;
  min-height: 100vh;
  max-width: 1400px;
  margin: 0 auto;
}

.left {
  flex: 1;
  max-width: 520px;
}

.right {
  flex: 1;
  display: flex;
  justify-content: center;
}

h1 {
  font-size: 3.8rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: 1.2rem;
  color: #5c4f44;
  margin-bottom: 3rem;
}

.grid-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  margin-bottom: 2.5rem;
}

.grid-btn {
  background: #e6e4df;
  padding: 1.4rem;
  text-align: center;
  text-decoration: none;
  color: #2b2118;
  font-weight: 500;
  border-radius: 6px;
  transition: 0.2s ease;
  font-size: 0.9rem;
}

.grid-btn:hover {
  background: #d7d4ce;
}

.social {
  display: flex;
  gap: 2rem;
  font-size: 0.9rem;
}

.social a {
  color: #6a5f55;
  text-decoration: none;
}

.social a:hover {
  color: #000;
}

.profile-image {
  width: 480px;
  max-width: 100%;
  border-radius: 6px;
  object-fit: cover;
}

</style>
